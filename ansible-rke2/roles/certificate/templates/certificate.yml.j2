apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ certificate_name }}
  namespace: istio-ingress
spec:
  secretName: {{ secret_name }}
  issuerRef:
    name: {{ letsencrypt_issuer_name }}
    kind: ClusterIssuer
  dnsNames: {{ dnsNamesList }}
  commonName: "*.chaoscauldron.space"
